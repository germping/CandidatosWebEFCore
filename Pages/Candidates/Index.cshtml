            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].BirthDate)
